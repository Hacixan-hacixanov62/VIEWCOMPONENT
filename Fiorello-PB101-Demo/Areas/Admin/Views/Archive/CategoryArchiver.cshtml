@model IEnumerable<CategoryArchiveVM>

@{
    ViewData["Title"] = "Category Archive";
}

<h1 class="text-center">Archive Categories</h1>
<div class="card mt-4">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Create date</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="category-data">
                        <td>@item.CategoryName</td>
                        <td>@item.CreatedDate</td>
                        <td>
                            <form action="d-inline" method="post" asp-asp-controller="Category" asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-trash"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 7l16 0" /><path d="M10 11l0 6" /><path d="M14 11l0 6" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg>
                                </button>
                            </form>
                            <a class="btn btn-secondary text-white btn-sm add-archive" data-id="@item.Id" >Restore</a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section js {
    <script src="~/admin/assets/js/archive.js"></script>
}